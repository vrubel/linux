#include <dt-bindings/input/input.h>

#include "sun8i-v3s-licheepi-zero.dts"

/ {
    model = "INDICATOR-FUN";
    compatible = "licheepi,licheepi-zero-dock", "licheepi,licheepi-zero",
             "allwinner,sun8i-v3s";

    aliases {
        serial0 = &uart0;
        spi0 = &spi0;
    };

    leds {
        compatible = "gpio-leds";

        mmc_led {
            label = "green_led";
            gpios = <&pio 1 5 GPIO_ACTIVE_HIGH>; /* PB5 */
            linux,default-trigger = "mmc0";
        };
    };
};


&codec {
    allwinner,audio-routing =
        "Headphone", "HP",
        "Headphone", "HPCOM",
        "MIC1", "Mic",
        "Mic",  "HBIAS";
    status = "okay";
};

&mmc1 {
    pinctrl-0 = <&mmc1_pins>;
    pinctrl-names = "default";
    broken-cd;
    bus-width = <4>;
    vmmc-supply = <&reg_vcc3v3>;
    status = "okay";
};

&pio {
    spi0_cs1: spi0_cs1 {
        pins = "PB4";
        function = "gpio_out";
        output-high;
    };

    i2c1_pins: i2c1-pins {
        pins = "PE21", "PE22";
        function = "i2c1";
    };
};

&spi0 {
    pinctrl-1 = <&spi0_cs1>;
    pinctrl-names = "default", "default";
    cs-gpios = <0>, <&pio 0 36 0>; /* PB4 */
    status = "okay";
    mx25l3205d:mx25l3205d@0 {
        compatible = "jedec,spi-nor";
        reg = <0x0>;
        spi-max-frequency = <50000000>;
        #address-cells = <1>;
        #size-cells = <1>;
        partition@0 {
            label = "boot";
            reg = <0x0 0x200000>;
        };
    };
    spidev@1 {
        compatible = "spidev";
        spi-max-frequency = <1200000>;
        reg = <1>;
    };
};

&i2c1 {
    status = "okay";
    pinctrl-names = "default";
    pinctrl-0 = <&i2c1_pins>;
};
